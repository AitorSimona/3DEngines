#version 460 core 
layout (location = 0) in vec3 position; 
layout (location = 1) in vec3 normal; 
uniform mat4 view; 
uniform mat4 model_matrix;
uniform mat4 projection;

out vec3 fNormal;
out vec3 fPosition;

void main()
{
fNormal = normal;
fPosition = position;

gl_Position = projection * view * model_matrix * vec4(position, 1.0f); 

}

